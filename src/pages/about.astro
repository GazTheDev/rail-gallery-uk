---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";

import about from "../images/seascale.jpg";
import me from "../images/me.jpg";
import team2 from "../images/team2.png";
import team3 from "../images/team3.png";
---

<MainLayout title="About The TechPeople Blog">
  <h1 class="text-4xl font-bold mb-5"> About RailGallery UK</h1>
  <div class="flex flex-col md:flex-row items-center justify-between gap-6">
    <div class="w-full md:w-1/2 mb-8 md:mb-0">
      <figure class="relative max-w-lg transition-all duration-300 cursor-pointer  hover:grayscale-0">


        <Image src={about} alt="RailGalleryUK"  class="w-full h-auto rounded-lg shadow-lg"/>
  <figcaption class="absolute px-4 text-lg text-white text-bold bottom-6">
      <p>Seascale Station - 8/01/2024</p>
  </figcaption> 
  </figure>
    </div>
   

    <div class="w-full md:w-1/2">
      
        <h2 class="text-3xl font-extrabold text-gray-900 mb-4">
            Who We Are
        </h2>
        <p class="text-gray-700 leading-relaxed mb-6">
          This website was built by Gareth Davies, a railway enthusiast from Seascale, United Kingdom. This website aims to provide a platform for people to submit and share pictures on our website.
        </p>
        <p class="text-gray-700 leading-relaxed mb-6">
        </p>
       
    </div>
</div>
<hr class="h-px my-9 bg-blue-200 border-0 dark:bg-gray-700">

<!-- Team -->
<div class="mt-10">
  <h2 class="text-3xl font-extrabold text-gray-900 mb-8">
    Our Team
  </h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <Image src={me} alt="Team Member 1" class="w-full h-auto"/>
        <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Gareth Davies</h3>
            <p class="text-gray-70">Founder</p>
            <p class="text-x-sm">"no wookies were hurt during the process of taking this picture"</p>
        </div>
    </div>
   
  </div>
</div>
</MainLayout>
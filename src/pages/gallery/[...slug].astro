---
import MainLayout from "../../layouts/MainLayout.astro";
import Tags from "../../components/Tags.astro";
import { getEntry } from 'astro:content';
import { formatDate } from "../../utils";

const { slug } = Astro.params;

if(slug === undefined) {
  throw new Error('Slug is required');
}

const entry = await getEntry('blog', slug);

if(entry === undefined) {
  return Astro.redirect('/404');
}

const { Content } = await entry.render();
---

<MainLayout>
  <a href="/gallery" class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white">Back To Articles</a>
  <article>
    <h1 class="text-4xl font-bold mb-2"> {entry.data.title}</h1>
    <h3 class="text-lg mb-2">Posted by {entry.data.author} on {formatDate(entry.data.pubDate)}  - <b>Unit Number: {entry.data.unit} </h3>
    <Tags tags={entry.data.tags} />
    <img src={'/images/' + entry.data.image} alt="Article Image" class="w-auto h-auto rounded-xl my-6" />
  
    <Content />
  </article>
  <div id="disqus_thread"></div>

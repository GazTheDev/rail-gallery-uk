---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION} from '../constants';
import { Seo } from "astro-seo-meta"

const { title = 'Railway Gallery' } = Astro.props;

interface Props {
  title?: string;
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Seo
          title="Railway Gallery UK"
          description="Gallery of railway pictures from across the UK"
          icon="favicon.ico"
        />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={SITE_DESCRIPTION} />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.js"
      integrity="sha512-BJ/5sR2hFxQTKin/55JQCcMTObShDBAmVjL/3NR/MVcrhyOazJjAgvROem03+HYyGw16SVdSfoWCFGr9syxAKA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lemon&family=Sedgwick+Ave+Display&display=swap" rel="stylesheet">
  
    <title>{SITE_TITLE} - {title}</title>
  </head>
  <body class="">
    

   <Navbar />

    <section class="container mx-auto max-w-screen-xl mt-10 px-8">
      <slot />
    </section>

   <Footer />
  </body>
</html>

    